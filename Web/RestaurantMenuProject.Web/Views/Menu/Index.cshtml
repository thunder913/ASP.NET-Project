@model List<MenuItemViewModel>
<link href="~/css/menu.css" rel="stylesheet" />
<ul id="menu" class="row">
    <li id="Drinks" onclick="window.location = '/Menu/Drinks'" class="col-md-5 h-100">
        <div id="Drinks" class="bg" style="background-image: url(/img/Menu/943d0be2-a226-4d6e-9acb-40ca53c244a4.jpg)"></div>
        <h1>Drinks</h1>
        <br />
        <br />
        <span>All the drinks you need, both alcoholic and non alchoholic beverages!</span>
        <br />
    </li>
    @foreach (var item in Model)
    {
<li id="@item.Id" onclick="window.location = '/Menu/@item.Name'" class="col-md-5 h-100">
    <div id="@item.Id" class="bg" style="background-image: url(/img/Menu/@(item.Image.Id).@(item.Image.Extension))"></div>
    <h1>@item.Name</h1>
    <br />
    <br />
    <span>@item.Description</span>
    <br />
    <br />
</li>}
</ul>
