@model ChefViewModel
@*Make this a partial*@
<style>
    .newOrders {
        height: 200px;
        border: 1px solid black;
    }

    .foodItem {
        height: 200px;
        flex: 1;
        border: 2px solid gray;
    }

    .activeOrders {
        overflow-x: hidden;
        background: #bab5b5;
        text-align: center;
        border: 5px solid gray;
    }
</style>

<h2> New orders:</h2>
<div class="table-responsive fixed-table-body newOrders">
    <table id="ordersTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="th-sm">
                    Table
                </th>
                <th class="th-sm">
                    Date
                </th>
                <th class="th-sm">
                    Client Name
                </th>
                <th class="th-sm">
                    Status
                </th>
                <th class="th-sm">
                    Price
                </th>
                <th class="th-sm" width="160px">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.NewOrders)
            {
                <tr>
                    <th class="th-sm">
                        @item.TableNumber
                    </th>
                    <th class="th-sm">
                        @item.Date.ToLocalTime()
                    </th>
                    <th class="th-sm">
                        @item.FirstName @item.LastName
                    </th>
                    <th class="th-sm">
                        @item.Status
                    </th>
                    <th class="th-sm">
                        @item.Price.ToString("0.00")$
                    </th>
                    <th class="th-sm">
                        <form method="post" style="display: inline-block;" data-orderId="@item.Id">
                            <input name="id" value="@item.Id" hidden />
                            <button class="btn btn-success accept">Accept</button>
                        </form>
                        <form method="get" asp-controller="Order" asp-action="Index" asp-route-id="@item.Id" style='display:inline-block;'>
                            <button class="btn btn-info">Info</button>
                        </form>
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>


<h2>Foods to prepare:</h2>

<div class="activeOrders">
    @foreach (var foodType in Model.FoodTypes)
    {
        <div class="table-responsive fixed-table-body foodItem col-md-4" style="display: inline-block; margin-right: -4px;">
            <h2 style="display: inline; text-align: center;">@foodType.CategoryName</h2>
            <table id="ordersTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th class="th-sm">
                            Food
                        </th>
                        <th class="th-sm">
                            Count
                        </th>
                        <th class="th-sm" width="160px">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in foodType.ItemsToCook)
                    {
                        <tr>
                            <th class="th-sm">
                                @item.FoodName
                            </th>
                            <th class="th-sm">
                                @item.Count
                            </th>
                            <th class="th-sm">
                                <form method="post" data-orderId="@item.OrderId" data-foodId="@item.FoodId" data-dishType="@foodType.FoodType">
                                    <button class="btn-success ready" style="display:inline;">Ready</button>
                                </form>
                            </th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts{
    <script src="~/js/notifications.js"></script>
    <script>
        $('.ready').on('click', function (e) {
            let form = e.target.parentElement;
            let orderId = form.dataset.orderid;
            let foodId = form.dataset.foodid;
            let dishType = form.dataset.dishtype;

            var antiForgeryToken = form.querySelector('input[name=__RequestVerificationToken]').value;
            $.ajax({
                type: 'POST',
                url: '/api/Chef/AddItem',
                data: JSON.stringify({ orderId: orderId, foodId: foodId, foodType: dishType }),
                headers: {
                    'X-CSRF-TOKEN': antiForgeryToken
                },
                contentType: 'application/json',
                success: function (res) {
                    if (!!res) {
                        successNotification("Succesfully accepted the order!");
                    }
                },
                error: function (err) {
                    dangerNotification('Something went wrong, try again!');
                }
            });
            e.preventDefault();
        })

        $('.accept').on('click', function (e) {
            let form = e.target.parentElement;
            let orderId = form.dataset.orderid;

            var antiForgeryToken = form.querySelector('input[name=__RequestVerificationToken]').value;
            $.ajax({
                type: 'POST',
                url: '/api/Chef/AcceptOrder/' + orderId,
                headers: {
                    'X-CSRF-TOKEN': antiForgeryToken
                },
                contentType: 'application/json',
                success: function (res) {
                    if (!!res) {
                        successNotification("Succesfully accepted the order!");
                    }
                },
                error: function (err) {
                    dangerNotification('Something went wrong, try again!');
                }
            });
            e.preventDefault();
        })

    </script>
}