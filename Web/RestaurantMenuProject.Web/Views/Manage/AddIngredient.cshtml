@model AddIngredientViewModel

<link href="~/css/addItemForm.css" rel="stylesheet" />

<form asp-controller="Manage" asp-action="AddIngredient" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-md-6">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="AllergensId"></label>
        <select asp-for="AllergensId" class="form-control selectpicker" multiple asp-items="@Model.Allergens">
            <option disabled selected hidden>--- SELECT ---</option>
        </select>
        <span asp-validation-for="Allergens" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success col-md-2">Add</button>
</form>

