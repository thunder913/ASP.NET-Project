@model EditDrinkViewModel

<link href="~/css/addItemForm.css" rel="stylesheet" />
<link href="~/css/editDish.css" rel="stylesheet" />
<form asp-controller="Manage" asp-action="EditDrink" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-md-6" hidden>
        <label asp-for="Id"></label>
        <input asp-for="Id" value="@Model.Id" class="form-control" />
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="AlchoholByVolume"></label>
        <input asp-for="AlchoholByVolume" class="form-control" />
        <span asp-validation-for="AlchoholByVolume" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="AdditionalInfo">Additional Informatin</label>
        <textarea rows="4" asp-for="AdditionalInfo" class="form-control"></textarea>
        <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="DrinkTypeId">Dish type:</label>
        <select asp-for="DrinkTypeId" class="form-control selectpicker" data-dropup-auto="false" asp-items="@Model.DrinkType" data-live-search="true">
        </select>
        <span asp-validation-for="DrinkTypeId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="PackagingTypeId"></label>
        <select asp-for="PackagingTypeId" class="form-control selectpicker" data-dropup-auto="false" asp-items="@Model.PackagingType" data-live-search="true">
        </select>
        <span asp-validation-for="PackagingTypeId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="IngredientsId"></label>
        <select asp-for="IngredientsId" class="form-control selectpicker" multiple asp-items="@Model.Ingredients">
            <option disabled selected hidden>--- SELECT ---</option>
        </select>
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="NewImage"></label>
        <br />
        <img class="img-fluid" src="~/img/Drinks/@Model.Image.Id.@Model.Image.Extension" />
        <input id="image" rows="4" asp-for="NewImage" class="form-control" />
        <label id="imageInfo">If you like the currently selected file, do not upload a new one.</label>
        <span asp-validation-for="NewImage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-info col-md-2">Edit</button>
</form>

<form method="post" asp-controller="Manage" asp-action="DeleteDrink">
    <input hidden asp-for="Id" value="@Model.Id" />
    <button type="submit" class="btn btn-danger col-md-2">Delete</button>
</form>
