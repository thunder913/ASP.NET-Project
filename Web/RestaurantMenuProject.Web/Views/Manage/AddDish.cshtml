@model AddDishViewModel


<form asp-controller="Manage" asp-action="AddDish" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group col-md-6">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Weight"></label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="PrepareTime"></label>
        <input asp-for="PrepareTime" class="form-control" />
        <span asp-validation-for="PrepareTime" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="AdditionalInfo">Additional Informatin</label>
        <textarea rows="4" asp-for="AdditionalInfo" class="form-control" ></textarea>
        <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="DishTypeId">Dish type:</label>
        <select asp-for="DishTypeId" class="form-control selectpicker" data-dropup-auto="false" asp-items="@Model.DishType" data-live-search="true">
        </select>
        <span asp-validation-for="DishTypeId" class="text-danger"></span>
    </div>

    <div class="form-group col-md-6">
        <label asp-for="Ingredients"></label>
        <select asp-for="Ingredients" class="form-control selectpicker" multiple asp-items="@Model.Ingredients">
            <option disabled selected hidden>--- SELECT ---</option>
        </select>
        <span asp-validation-for="Ingredients" class="text-danger"></span>
    </div>
    <button type="submit">Add</button>
</form>